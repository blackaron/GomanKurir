<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    app:cardElevation="5dp"
    android:layout_margin="5dp"
    app:cardUseCompatPadding="true">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:id="@+id/foodBox"
        android:onClick="UpdateOrder">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <TextView
                android:layout_width="match_parent"
                android:layout_height="30dp"
                android:text="#orderid"
                android:id="@+id/TVorderid"
                android:visibility="visible"/>

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="nama Restoran"
                android:id="@+id/TVNamaRestoran"
                android:visibility="visible"/>

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="alamat"
                android:id="@+id/TVAlamat"
                android:visibility="visible"/>
            <View
                android:layout_width="match_parent"
                android:layout_height="5dp"/>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/TVnamaPenerima"
                android:gravity="center"
                android:textSize="15sp"
                android:textStyle="bold"
                android:textColor="@color/md_black_1000"
                android:textAlignment="center"
                android:text="penerima"/>

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:id="@+id/TVorderPrice"
                android:gravity="right"
                android:textSize="15sp"
                android:textStyle="bold"
                android:textColor="@color/md_black_1000"
                android:text="order price"/>

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:id="@+id/TVtipePembayaran"
                android:visibility="visible"
                android:textStyle="bold"
                android:textColor="@color/md_black_1000"
                android:text="tipe pembayaran "/>

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:id="@+id/TVorderAddress"
                android:textStyle="bold"
                android:visibility="visible"
                android:text="order address"
                android:textColor="@color/md_black_1000"/>

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:id="@+id/TVComment"
                android:visibility="visible"
                android:textStyle="bold"
                android:text="order comen"
                android:textColor="@color/md_black_1000"/>

<!--            <Button-->
<!--                android:layout_width="250dp"-->
<!--                android:layout_height="40dp"-->
<!--                android:layout_marginTop="20dp"-->
<!--                android:layout_gravity="center"-->
<!--                android:background="@drawable/rounded_shape"-->
<!--                android:text="AMBIL"-->
<!--                android:textColor="@color/md_white_1000"-->
<!--                android:onClick="UpdateOrder"/>-->

        </LinearLayout>
    </LinearLayout>
</androidx.cardview.widget.CardView>